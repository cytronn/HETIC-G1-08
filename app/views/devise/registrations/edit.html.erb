<%# <p class="yuumm-breadcrumb">Account</p> %>

<section class="yuumm-form yuumm-account">
  <div class="yuumm-form-intro">
    <h1>Edit your profile, logout, etc, you're the boss here.</h1>
  </div>
  <div class="mt-4">
    <%# <h1>My account</h1> %>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, inline_errors: true) do |f| %>
      <%= devise_error_messages! %>  
      <%= f.errors_on :tasks %>
      <%= f.email_field :email %>
      <%= f.text_field :first_name %>    
      <%= f.text_field :last_name %>        
      <%= f.password_field :current_password %>       
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>   
      <%= f.submit "Update" %>
    <% end %>
    <hr>
    <h3>Danger zone</h3>
    <p>Be careful with what you do here. Once you delete an account, there is no going back. Please be certain.</p>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, :class => "yuumm-navbar-button-danger" %></p>
  </div>
</section>


