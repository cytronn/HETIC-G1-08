<section class="yuumm-form">
  <div class="yuumm-form-intro">
    <h2>Welcome on YUMM</h2>
    <p>Join a community of thousands of enthusiasts who share their dishes around the world. You are just one click away from the great experience!</p>
  </div>
  <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email %>     
      <%= f.password_field :password %>
      <%= f.submit "Sign in" %>
    <% end %>
  <%= render "devise/shared/links" %>
</section>
