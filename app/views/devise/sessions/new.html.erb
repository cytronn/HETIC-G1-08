<section class="yumm-login">
  <div class="yumm-login-intro">
    <h2>Welcome on YUMM</h2>
    <p>Join a community of thousands of enthusiasts who share their dishes around the world. You are just one click away from the great experience!</p>
  </div>
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email %>     
    <%= f.password_field :password %>
    <%= f.submit "Sign in" %>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
