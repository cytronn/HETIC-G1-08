<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="<%= dishes_path %>">Dishes</a></li>
  <li class="breadcrumb-item"><a href="<%= dish_path(@dish) %>"><%= @dish.name %></a></li>
  <li class="breadcrumb-item active">Edit</li>
</ol>
<div class="mt-4">
  <%= link_to 'Back', dishes_path %>
  <div class="mt-4">
    <h1>Edit <%= @dish.name %></h1>
    <%= bootstrap_form_for(@dish) do |f| %>
      <% if @dish.errors.any? %>
        <div id="error_explanation">
            <h2>
              Watch out! ðŸ˜®
              <%= pluralize(@dish.errors.count, "error") %> prevent us from accepting your dish:
            </h2>
          <ul>
            <% @dish.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :cover %><br>
          <% unless @dish.cover.url.nil? %>
            <img class="img-fluid" src="<%= @dish.cover.url %>" style="height: 350px; width: 50%; display: block; background-color: grey;" data-holder-rendered="true">
            <%= f.file_field :cover %>
          <% else %>
            <%= f.file_field :cover %>
          <% end %>
      </p>
      <%= f.text_field :name, id: :name %>
      <%= f.text_area :description, id: :description %>
      <%= f.text_area :ingredients, id: :ingredients %>
      <%= f.number_field :portions, id: :portions %>
      <%= f.date_select :delivery_at, id: :delivery_at %>
      <%= f.submit 'Save', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
