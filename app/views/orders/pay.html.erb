<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="<%= dishes_path %>">Dishes</a></li>
  <li class="breadcrumb-item"><a href="<%= dish_path(@dish) %>"><%= @dish.name %></a></li>
  <li class="breadcrumb-item active">Order #1</li>
</ol>
<div class="mt-4">
  <h1>New Order</h1>
  <div class="d-flex flex-row mt-4">
    <div class="card p-4" style="width: 20rem;">
      <div class="card-block">
        <h4 class="card-title"><%= @dish.name %></h4>
        <p class="card-text"><%= @dish.description %></p>
        <a href="<%= dish_path(@dish) %>" class="btn btn-primary">See details</a>
        <hr>
        <dl class="row mt-3">
          <dt class="col-sm-6">Cooker ID</dt>
          <dd class="col-sm-3"><%= @dish.user_id %></dd>
        </dl>
      </div>
    </div>
    <div class="ml-5">
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @amount %>%"
          data-locale="auto"></script>
    </div>
</div>
