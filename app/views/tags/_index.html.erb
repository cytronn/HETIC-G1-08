<% Tag.all.each do |tag| %>
<%
    if params['tag'] 
        if params['tag'].split(',').include?(tag.name)
            my_class = 'btn-success'
        else
            my_class = 'btn-outline-success'
        end
    else
        my_class = 'btn-outline-success'
    end        
%>
    <%= link_to tag.name, tag_path(:tag => go_to_tag(tag.name)), :class => "btn "+ my_class %>
<% end %>